---
import Eje from "./Eje";
import ProjectCard from "./ProjectCard";

interface Props {
	title: string;
	body: string;
	href: string;
	technologies: string[];
	image: string;
	details: { screenshot: string; description: string }[];
}

const { href, title, body, technologies, image, details } = Astro.props;
---

<div class="link-card relative">
	<Eje
		title={title}
		body={body}
		technologies={technologies}
		details={details}
		client:visible
	>
		<div class="flex flex-col space-y-5 justify-between">
			<img
				src={image}
				alt="imagen proyecto"
				srcset=""
				class="rounded-xl"
			/>
			<h2 class="color-blue">
				{title}
			</h2>
			<p class="t-body">
				{body}
			</p>
			<p>Tecnologias</p>
			<div class="flex flex-row justify-start flex-wrap gap-2">
				{
					technologies.map((skill) => (
						<div class="capsule">{skill}</div>
					))
				}
			</div>
		</div>
	</Eje>
</div>

<style>
	.t-body {
		display: -webkit-box;
		-webkit-line-clamp: 4; /* Limita a 4 l√≠neas */
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.mapa {
		display: none;
		grid-template-columns: repeat(
			5,
			90px
		); /* Dos columnas de 120px cada una */
		grid-template-rows: repeat(3, 90px); /* Dos filas de 120px cada una */
		gap: 0;
		overflow: hidden; /* Oculta el sobrante de las columnas */
		position: absolute;
		top: -45px;
		left: -45px;
		height: 55%;
		z-index: -1;
	}
	.mapa::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 30px; /* Altura del degradado difuminado */
		background: linear-gradient(
			to bottom,
			rgba(204, 204, 204, 0),
			#0a182e
		); /* Degradado de difuminado */
	}
	.cuadrado {
		background-color: #ccc; /* Color de fondo de los cuadrados */
		border: 1px solid #ffffff11;
		background-color: transparent;
	}
	.cuadrado:nth-child(2) {
		background-color: var(--bg-blue-transparent);
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	.link-card {
		border-radius: 15px;
		padding: 25px;
		position: relative;
		transition: all 0.5s ease-out;
		cursor: pointer;
		overflow: hidden;
		border: 1px solid #ffffff1e;
	}
	.link-card a {
		height: 100%;
	}
	.links-card img {
		position: relative;
		display: flex;
		z-index: 50;
	}
	.link-card:hover {
		border: 1px solid #ffffff2c;
	}
	.link-card:hover .mapa {
		display: grid;
	}

	.capsule {
		background-color: #00ffff33;
		color: var(--color-blue);
		padding: 0.3rem 0.5rem;
		font-size: 1rem;
		border-radius: 7px;
		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>
