---
import CardModal from "./CardModal";

interface Props {
	title: string;
	body: string;
	href: string;
	technologies: string[];
	image: string;
	details: { screenshot: string; description: string }[];
}

const { href, title, body, technologies, image, details } = Astro.props;
---

<div class="link-card relative">
	<CardModal
		title={title}
		body={body}
		technologies={technologies}
		details={details}
		client:visible
	>
		<div class="flex flex-col space-y-5 justify-between">
			<img
				src={image}
				alt="imagen proyecto"
				srcset=""
				class="rounded-xl"
			/>
			<h2 class="color-blue">
				{title}
			</h2>
			<p class="t-body">
				{body}
			</p>
			<p>Tecnologias</p>
			<div class="flex flex-row justify-start flex-wrap gap-2">
				{
					technologies.map((skill) => (
						<div class="capsule">{skill}</div>
					))
				}
			</div>
			<div class="underline"></div>
		</div>
	</CardModal>
</div>

<style>
	/** ESTILO DE LA LINEA ANIMADA */


	.underline {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 3px;
		background: linear-gradient(to right, #00bcd4, #2196f3);
		transform: scaleX(0);
		transform-origin: bottom right;
		transition: transform 0.3s ease;
	}

	.link-card:hover .underline {
		transform: scaleX(1);
		transform-origin: bottom left;
	}

	/* ESTILOS DE LA TARJETA */
	.t-body {
		display: -webkit-box;
		-webkit-line-clamp: 4; /* Limita a 4 l√≠neas */
		-webkit-box-orient: vertical;
		overflow: hidden;
		font-size: 16px;
		color: #fff;
	}

	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	.link-card {
		border-radius: 15px;
		padding: 25px;
		position: relative;
		transition: all 0.5s ease-out;
		cursor: pointer;
		overflow: hidden;
		background-color: var(--custom-bg-slate);
	}
	.link-card a {
		height: 100%;
	}
	.links-card img {
		position: relative;
		display: flex;
		z-index: 50;
	}

	.capsule {
		background-color: #00ffff33;
		color: var(--color-blue);
		padding: 0.3rem 0.5rem;
		font-size: 14px;
		border-radius: 7px;
		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>
