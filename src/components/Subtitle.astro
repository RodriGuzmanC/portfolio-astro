---

interface Props{
    title: string;
}

const { title } = Astro.props;

---

<div class="flex justify-center my-12">
    <div class="w-fit">
        <h2 class="text-white text-1xl md:text-3xl font-bold inline-block relative">{title}</h2>
        <span class="w-full h-0.5 bg-white mt-2 mx-auto inline-block"></span>
    </div>
</div>

